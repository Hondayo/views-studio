<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title><%= typeof title !== 'undefined' ? title : 'Views Studio' %></title>

  <link rel="stylesheet" href="/styles.css" />
  <% if (typeof pageStyle !== 'undefined') { %>
    <link rel="stylesheet" href="/pages/<%= pageStyle %>.css" />
  <% } %>
</head>

<body>
  <!-- ─────── ▼ トップバー ▼ ─────── -->
  <header class="topbar">
    <button id="topbar-toggle" class="topbar-toggle">≡</button>
    <span class="brand-name">Views&nbsp;Studio</span>
    <a href="/shorts/new" class="new-work-btn">切り抜き投稿</a>
    <a href="/works/new" class="new-work-btn">作品を公開</a>
  </header>

  <div class="page-layout">
    <%- include('partials/sidebar') %>

    <main class="main-content">
      <%- body %>
    </main>
  </div>

  <script src="/js/sidebar.js"></script>
  <script src="/js/topbar.js"></script> 
  <% if (typeof pageScript !== 'undefined') { %>
    <script src="/js/<%= pageScript %>.js"></script>
  <% } %>
</body>
</html>
